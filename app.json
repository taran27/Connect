//  Managed workflow -- use only with Prebuild configuration and cross check
{
  "expo": {
    "name": "bridger-salesforce",
    "slug": "bridger-salesforce",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/BridgerAppLogo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/launch.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bridgerins.salesforce"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/BridgerAppLogo.png",
        "backgroundColor": "#3399FF"
      },
      "permissions": [
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "package": "com.bridgerins.salesforce",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "myapp"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#3399FF",
          "image": "./assets/images/launch.png",
          "dark": {
            "image": "./assets/images/launch.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b50b3d3b-7e4f-4bdc-9381-6ada5ab6fca0"
      }
    }
  }
}
